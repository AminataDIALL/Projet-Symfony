{% extends "::layout/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
<center>
    <div class="span4">
        <h4>Modifier mon mot de passe</h4>                         
    </div
</center>
<center>  
    <div class="col-sm-4 col-sm-offset-4" style="border: 1px outset #aaa">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-warning" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
</center>
{% endblock body %}