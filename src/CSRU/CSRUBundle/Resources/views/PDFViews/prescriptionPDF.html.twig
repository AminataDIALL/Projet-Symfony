                <td width="200"><strong style="color: blue">POSOLOGIE</strong></td>
                <td width="90"><strong style="color: blue">PRIX</strong></td>
            </tr>
        </thead>
        <tr>
            <td>{{ prescription.MediPrescription.nomMedicament }}</td>
            <td>{{ prescription.MediPrescription.quantiteMedicament  }}</td>
            <td>{{ prescription.MediPrescription.nbreMedicament  }}</td>
            <td></td>
        </tr>
    </table><br/><br/><br/><br/>

