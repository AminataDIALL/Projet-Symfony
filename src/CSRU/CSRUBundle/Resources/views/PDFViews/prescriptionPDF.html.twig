    </table>

    <table BORDER="1" align="center">
        <thead bgcolor="yellow">
            <tr text-align="center">
                <td width="150"><strong style="color: blue">TYPE EXAMEN</strong></td>
                <td width="400"><strong style="color: blue">DESCRIPTION</strong></td>
            </tr>
        </thead>
        <tr>
            <td height="200">{{ prescription.typeExamen }}</td>
            <td>{{ prescription.contenu  }}</td>
        </tr>
    </table><br/>
