</head>
<body>
    <h1>CSRU-MALI</h1>
    {% if prescription.type == 'Ordonance' %}
    <h2 align="center">Fiche de {{ prescription.type }}</h2>
    <table>
        <tr>
            <td></td>
            <td><h2>Information PATIENT</h2></td>
            <td></td>
        </tr>
        <tr>
            <td width="80"></td>
            <td width="100">NOM PATIENT</td><td width="10"></td>
            <td width="120"><strong style="color: blue"> {{ prescription.dossierMedical.etudiant.nom }}</strong></td>
        </tr>
        <tr>
            <td></td>
            <td>PRENOM</td><td></td>
            <td><strong style="color: blue">{{ prescription.dossierMedical.etudiant.prenom }}</strong></td>
        </tr>
        <tr>
            <td></td>
            <td>DATE DE NAISSANCE</td><td></td>
            <td><strong style="color: blue">{{ prescription.dossierMedical.etudiant.age|date('d-m-Y') }}</strong></td>
        </tr>
        <tr>
            <td></td>
            <td>GENRE</td><td></td>
            <td><strong style="color: blue">{{ prescription.dossierMedical.etudiant.genre }}</strong></td>
        </tr>
        <tr>
            <td></td>
            <td>FACULTE</td><td></td>
            <td><strong style="color: blue">{{ prescription.dossierMedical.etudiant.faculte }}</strong></td>
        </tr>
        <tr>
            <td></td>
            <td><h2>SONT PRESCRITS :</h2></td>
            <td></td>
        </tr> 
    </table>

    <table BORDER="1" text-align="center">
