{% extends "::layout/layout.html.twig" %}
{% block body %}

    <!--  vue de la page de dÃ©tail d'une hospitalisation d'un dossier Medical -->

    <div class="col-lg-12 white-panel">
        <div class="col-lg-1"></div>
        <div class="col-lg-9">
            <h3><strong style="color: black"> Fiche d'hospitalisation du </strong><strong style="color: blue">{{ hospitalisation.date|date('d-m-Y') }}</strong></h3><br/>
            <div class="col-lg-6">
                <p><strong style="color: black">NOM PATIENT:</strong></p>
                <p><strong style="color: black">PRENOM PATIENT:</strong></p>
                <p><strong style="color: black">NOM HOPITAL:</strong></p>
                <p><strong style="color: black">PAVILLON:</strong></p>
                <p><strong style="color: black">SALLE:</strong></p>
                <p><strong style="color: black">LIT:</strong></p>
                <p><strong style="color: black">MOTIF:</strong></p>
            </div>
            <div class="col-lg-6">
                <p><strong style="color: blue">{{ hospitalisation.dossierMedical.etudiant.nom }}</strong></p>
                <p><strong style="color: blue">{{ hospitalisation.dossierMedical.etudiant.prenom }}</strong></p>
                <p><strong style="color: blue">{{ hospitalisation.hopital }}</strong></p>
                <p><strong style="color: blue">  {{ hospitalisation.pavillon}}</strong></p>
                <p><strong style="color: blue">  {{ hospitalisation.salle}}</strong></p>
                <p><strong style="color: blue">  {{ hospitalisation.lit}}</strong></p>
                <p><strong style="color: blue">{{ hospitalisation.motif}}</strong></p><br/><br/><br/><br/>
                <p style="float: right"><strong style="color: black">SIGNATURE:  </strong><strong style="color: blue">{{ hospitalisation.utilisateur.profil.profession}} {{ hospitalisation.utilisateur.username}}</strong></p>
            </div>
        </div><br/>
        <div class="col-lg-2">
            <a href="{{ path('hospitalisation',{'id':hospitalisation.dossierMedical.id}) }}"><button class="btn btn-round btn-warning" style="width: 120px"> RETOUR </button></a><br/><br/>
            <a href="{{ path('ficheSortie',{'id':hospitalisation.id}) }}"><button class="btn btn-round btn-info" style="width: 120px"> FICHE SORTIE </button></a><br/><br/>
        </div> 
    </div>

{% endblock %}

