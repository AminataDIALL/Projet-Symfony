{% extends "::layout/layout.html.twig" %}
{% block body %}

    <!--  vue de la page affichant la liste des antécedents d'un dossier Medical -->

    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <a href="{{ path('dossierMedical',{'id':dossier.id}) }}"><button class="btn btn-round btn-success"> RETOUR </button> </a>
            <a href="{{ path('ajoutAntecedant',{'id':dossier.id}) }}"><button class="btn btn-round btn-info"> Ajouter un nouveau </button></a>
        </div>
        <div class="col-lg-1"></div>
    </div><br/>
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 white-panel">
            <center><h3><font style="color: blue">Dossier Medical de {{ dossier.etudiant.nom }} {{ dossier.etudiant.prenom }}</font></h3></center><br/><br/>
                    {% if antecedants|length == null %}
                <center> <h3>Aucun antécédent n'est signalé </h3></center>
                {% else %}
                {% endif %}
            <table class="table table-bordered table-bordered table-striped table-condensed">
                <tr>
                    <td>
                        {% for antecedant in antecedants %}
                    <center><a href="{{ path('detailAntecedant',{'id':antecedant.id}) }}" data-toggle="popover" title="détail" data-content="détail">Les antecedants à la date du {{ antecedant.date|date('d-m-Y')}}</a></center>
                    </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-lg-1"></div>
    </div>
{% endblock %}
