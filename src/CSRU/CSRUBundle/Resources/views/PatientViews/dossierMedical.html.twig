{% extends "::layout/layout.html.twig" %}
{% block body %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('page_accueil') }}">ACCUEIL </a><strong>></strong>
            <i class="icon-angle-right"></i>
            <a href="{{ path('listePatient') }}"> PATIENTS </a><strong>></strong> 
            <a href="#"> DOSSIER MEDICAL</a>
        </li>
        <!-- vue de la page d'affichage d'un dossier Medical -->
    </ul>
    <div class=" col-lg-12 white-panel"><!-- white panel pn -->
        <div class="col-lg-1"><br/><br/>
            <a href="{{ path('consultation',{'id':dossier.id}) }}"><button class="btn btn-round  btn-info" style="width: 150px"> CONSULTATION </button></a><br/><br/>
            <a href="{{ path('prescription',{'id':dossier.id}) }}"><button class="btn btn-round btn-info" style="width: 150px"> PRESCRIPTION </button></a><br/><br/>
            <a href="{{ path('hospitalisation',{'id':dossier.id}) }}"><button class="btn btn-round btn-info"style="width: 150px"> HOSPITALISATION </button></a><br/><br/>
            <a href="{{ path('antecedant',{'id':dossier.id}) }}"><button class="btn btn-round btn-info"style="width: 150px"> ANTECEDENTS</button></a><br/><br/>
            <a href="{{ path('examen',{'id':dossier.id}) }}"><button class="btn btn-round btn-info"style="width: 150px"> EXAMENS </button></a><br/><br/>
            <a href="{{ path('rdv',{'id':dossier.id}) }}"><button class="btn btn-round  btn-info"style="width: 150px"> RENDEZ-VOUS </button></a><br/><br/>
            <a href="#"><button class="btn btn-round  btn-info"style="width: 150px"> INFORMATIONS </button></a><br/><br/>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-9">
            <center><h3><strong style="color: black">Dossier Médical de </strong><font style="color: blue">{{ dossier.etudiant.nom }} {{ dossier.etudiant.prenom }}</font></h3></center><br/><br/>
            <div class="col-lg-6">
                <p><img src="{{asset(dossier.image.AssetPath) }}" alt="image" width="110" height="100"></p>
                <p><strong style="color: black">NOM: </strong></strong><strong style="color: blue">{{ dossier.etudiant.nom }}</strong></p>
                <p><strong style="color: black">PRENOM:  </strong><strong style="color: blue">{{ dossier.etudiant.prenom }}</strong></p>
                <p><strong style="color: black">Né(e) LE:  </strong><strong style="color: blue">  {{ dossier.etudiant.age|date('d-m-Y') }}</strong></p>
                <p><strong style="color: black">FACULTE FREQUENTEE:  </strong><strong style="color: blue">{{ dossier.etudiant.faculte }}</strong></p>
            </div>
            <div class="col-lg-6">
                <p><strong style="color: black">DATE DE CREATION: </strong><strong style="color: blue">{{ dossier.date|date('d-m-Y') }}</strong></p>
                <p><strong style="color: black">LIEU DE CREATION: </strong><strong style="color: blue">{{ dossier.centre }}</strong></p>
                <p><strong style="color: black">CREER PAR: </strong><strong style="color: blue">{{ dossier.utilisateur.profil.profession }} {{ dossier.utilisateur.username }}</strong></p>
            </div>

        </div>
    </div>

{% endblock %}