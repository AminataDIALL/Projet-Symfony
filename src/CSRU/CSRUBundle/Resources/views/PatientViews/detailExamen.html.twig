{% extends "::layout/layout.html.twig" %}
{% block body %}

    <!--  vue de la page de dÃ©tail d'un examen d'un dossier Medical -->

    <div class="col-lg-12 white-panel">
        <div class="col-lg-1"></div>
        <div class="col-lg-9">
            <h3> Fiche d'examen du {{ examen.date|date('d-m-Y') }}</h3><br/>
            <div class="col-lg-6">
                <p>NOM PATIENT:</p>
                <p>PRENOM PATIENT:</p>
                <p>TAILLE:</p>
                <p>POIDS:</p>
                <p>TEMPERATURE:</p>
                <p>TENSION:</p>
                <p>GROUPE SANGUIN:</p>
                <p>RESULTAT EXAMEN:</p>
            </div>
            <div class="col-lg-6">
                <p><strong style="color: blue">{{ examen.dossierMedical.etudiant.nom }}</strong></p>
                <p><strong style="color: blue">{{ examen.dossierMedical.etudiant.prenom }}</strong></p>
                <p><strong style="color: blue">{{ examen.taille}}</strong></p>
                <p><strong style="color: blue">{{ examen.poids}}</strong></p>
                <p><strong style="color: blue">{{ examen.temperature}}</strong></p>
                <p><strong style="color: blue">{{ examen.tension}}</strong></p>
                <p><strong style="color: blue">{{ examen.groupeSaguin}}</strong></p>
                <p><strong style="color: blue">{{ examen.resultat}}</strong></p><br/><br/><br/><br/>
                <p style="float: right">SIGNATURE:  <strong style="color: blue">{{ examen.utilisateur.profil.profession}} {{ examen.utilisateur.username}}</strong></p>
            </div>
        </div><br/>
        <div class="col-lg-2">
            <a href="{{ path('examen',{'id':examen.dossierMedical.id}) }}"><button class="btn btn-round btn-success" style="width: 100px"> RETOUR </button></a><br/><br/>
            <a href="#"><button class="btn btn-round btn-info" style="width: 100px"> IMPRIMER </button></a>
        </div> 
    </div> 

{% endblock %}
