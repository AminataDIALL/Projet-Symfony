{% extends "::layout/layout.html_1.twig" %}
{% block body %}
    <center> <h2> Ajout d'un étudiant</h2></center><br/>
    <div class="row">
        <center> <h4>étudiant ajouté avec succès</h4></center>
        {{ form_start(form) }}
        <div class="form-group col-lg-6">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.prenom) }}

            {{ form_label(form.nom) }}
            {{ form_widget(form.nom ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.nom) }}

            {{ form_label(form.age) }}
            {{ form_widget(form.age ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.age) }}

            {{ form_label(form.genre) }}
            {{ form_widget(form.genre ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.genre) }}

        </div>
        <div class="col-lg-6">
            {{ form_label(form.lieuDeNaissance) }}
            {{ form_widget(form.lieuDeNaissance ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.lieuDeNaissance) }}

            {{ form_label(form.matricule) }}
            {{ form_widget(form.matricule ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.matricule) }}

            {{ form_label(form.universite) }}
            {{ form_widget(form.universite ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.universite) }}

            {{ form_label(form.faculte) }}
            {{ form_widget(form.faculte ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.faculte) }}

        </div>
    </div>
    <center><button class="btn btn-primary" type="submit">Ajouter</button></center>
        {{ form_end(form) }}
    {% endblock %}
