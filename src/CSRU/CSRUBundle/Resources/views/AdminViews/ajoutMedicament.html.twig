{% extends "::layout/layout.html_1.twig" %}
{% block body %}

    {% for m in app.session.Flashbag.get('medicament') %}
        <div class="row alert alert-danger" style="text-align: center">
            <h3>
                {{ m }}
            </h3>
        </div>
    {% endfor %}

    <center> <h2> Ajout d'un m√©dicament</h2></center><br/>
    <div class="row">
        {{ form_start(form) }}
        <div class="form-group col-lg-6">

            {{ form_label(form.nom) }}
            {{ form_widget(form.nom ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.nom) }}

            {{ form_label(form.description) }}
            {{ form_widget(form.description ,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.description) }}

            {{ form_label(form.quantite) }}
            {{ form_widget(form.quantite ,{'attr':{'class':'form-control'}}) }}
