{% block javascripts %}
    <script src="{{ asset('css/jquery-3.1.0.min.js') }}"></script>
    <script src="{{ asset('css/morris.min.js') }}"></script>
    <script src="{{ asset('css/raphael.min.js') }}"></script>
    <script>
        
         Morris.Bar({
            element: 'tous',
            data: [
                {
                    y: 'Les patients<br>suivants les universités',
                    a: {{ tous|length }},
                    b: {{ usttb|length }},
                    c: {{ ussgb|length }},
                    d: {{ usjpb|length }},
                    e: {{ ulshb|length }},
                    f: {{ us|length }}
                   
                    }
            ],
            xkey: 'y',
            ykeys: ['a', 'b', 'c', 'd', 'e', 'f'],
            labels: ['Tous les Patients', 'Patient USTTB','Patient USSGB','Patient USJPB','Patient ULSHB','Patient US']
        });
        
        Morris.Bar({
            element: 'all',
            data: [
                {
                    y: 'Les patients<br>suivant le genre',
                    a: {{ all|length }},
                    b: {{ homme|length }},
                    c: {{ femme|length }}
                   
               }
            ],
            xkey: 'y',
            ykeys: ['a', 'b', 'c'],
            labels: ['Tous les patients', 'Patient homme','Patient femme']
        });
        
        
    </script>
{% endblock %}
