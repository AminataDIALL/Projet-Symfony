{% extends "::layout/layout.html.twig" %}
{% block body %}

    <!--  vue de la page affichant la liste des étudinats -->

    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('page_accueil') }}">ACCUEIL </a><strong>></strong>
            <i class="icon-angle-right"></i>
            <a href="#"> ETUDIANTS </a><strong>></strong>
            <a href="#"> USTT-Bamako </a><strong>></strong>
            <a href="#"> FST-Bamako</a>
        </li>
    </ul>
    <h2><center>Liste des Etudiants de la FST</center></h2>
    <section class="table-responsive">
        <table width="100%" class="table table-striped  table-bordered bootstrap-datatable datatable">
            <thead style="background-color: #e4b9b9">
            <th style="line-height: 210%">
            <center>Matricule</center>
            </th>
            <th>
            <center>  Nom</center>
            </th>
            <th>
            <center> Prenom</center>
            </th>
            <th>
            <center> Age</center>
            </th>
            <th>
            <center> Faculté</center>
            </th>
            <th>
            <center> Action</center>
            </th>
            </thead>
            {% for etudiant in etudiant %}
                <tr>
                    <td>
                <center>  {{ etudiant.matricule }} </center>
                </td>
                <td>
                <center> {{ etudiant.nom }}</center>
                </td>
                <td>
                <center> {{ etudiant.prenom }}</center>
                </td>
                <td>
                <center> {{ etudiant.age|date('d-m-Y')}}</center>
                </td>
                <td>
                <center> {{ etudiant.faculte }}</center>
                </td>
                <td>
                <center><a href="{{ path('ajoutDossierMedical',{'id':etudiant.id}) }}" data-toggle="popover" title="Créer un dossier médicale" data-content="Créer un dossier médicale"><span class="glyphicon glyphicon-list-alt"  ></span></a></center>
                </td>
                </tr>
            {% endfor %}
        </table>

        <div class="pagination pagination-centered">
            <ul>
                <li><a href="#">Prev</a></li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">Next</a></li>
            </ul>
        </div>  
    </section>   

{% endblock %}
